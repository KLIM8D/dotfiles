Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintfull
!Xcursor.theme: neutral
!Xcursor.size: 48
! URxvt
URxvt*termName: rxvt
URxvt*scrollBar_right:	false
URxvt*scrollBar:	false
URxvt*borderLess:	false
URxvt*inheritPixmap:	false
URxvt*urgentOnBell: true
URxvt*geometry:		90x24
URxvt*tint:		white
!#URxvt.font: xft:DejaVu Sans Mono:pixelsize=12 !#URxvt.font: xft:Monospace:pixelsize=24
!URxvt.font: xft:Droid Sans Mono for Powerline:pixelsize=22
URxvt.buffered: true

! do not scroll with output
URxvt*scrollTtyOutput: false
!
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
!
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
!

URxvt.letterSpace: -1

! makes it possible to change font size with keybindings
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.iso14755: false
URxvt.iso14755_52: false

! Some programs like alsamixer and xprop do not perform well 
! with some graphics drivers and in consequence redraw very slowly.
URxvt*skipBuiltinGlyphs:    true

! -- Links -- !
!URxvt*perl-ext-common: default,matcher
!URxvt*urlLauncher: /bin/firefox
!URxvt*matcher.Button: 1
!URxvt.perl-ext-common: default,matcher
!URxvt.urlLauncher: /usr/bin/firefox
!URxvt.matcher.button: 2
!URxvt.matcher.pattern.1: \bwww\.[\w-]\.[\w./?&@#-]*[\w/-]

!Clickable URLs
!URxvt*perl-ext-common: default,matcher
!URxvt*matcher.button: 2
!URxvt*urlLauncher: /usr/bin/firefox
!URxvt*underlineURLs: true

URxvt.perl-ext-common:default,clipboard,matcher,keyboard-select,resize-font
URxvt.keysym.M-u:     perl:url-select:select_next
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.url-launcher:   /usr/bin/firefox
URxvt.underlineURLs:  True
URxvt.matcher.button: 1 
URxvt.clipboard.autocopy: true

! -- ROFI --!
rofi.color-enabled: true
rofi.color-window: #252525, #252525, #000000
rofi.color-normal: #252525, #a0a0a0, #323232, #960000, #e0e0e0
rofi.color-active: #038b23, #efefef, #03721c, #960000, #e0e0e0
rofi.color-urgent: #b82a00, #ffffff, #a62600, #960000, #e0e0e0
rofi.padding: 1
!rofi.lines: 10
rofi.borderwidth: 1
rofi.opacity: 100
rofi.font: Inconsolata 12
rofi.location: 7
rofi.yoffset: 0
rofi.xoffset: 0
rofi.width: 100
rofi.fixed_num_lines: 1
rofi.hmode: true
rofi.terminal: urxvt
rofi.ssh-set-title: false
